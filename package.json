  "author": {
    "name": "dejurin",
    "url": "https://github.com/Timenow-zone"
  },
  "license": "MIT",
  "homepage": "https://utctime.info/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Timenow-zone/Simple-Digital-Clock-Widget.git"
  },
  "bugs": {
    "url": "https://github.com/Timenow-zone/Simple-Digital-Clock-Widget/issues"
  },
  "funding": [
    {
      "type": "website",
      "url": "https://utctime.info/"
    },
